
@{
    ViewBag.Title = "ViewCargobooking";
    Layout = "~/Views/Admin/_Adminlayout.cshtml";
}

<style>

    .template1 {
    }

    .card1 {
        margin-right: 10px;
        margin-left: 10px;
        min-width: 100px;
        min-height: 100px;
    }


    .panel1 {
    }


    thead {
        font-weight: bold;
    }

    .grouptable {
        table-layout: fixed;
        width: 500px;
    }

        .grouptable tr {
            border-bottom: 1px solid grey;
        }
</style>


<div class="main-panel" id="main-panel" style="margin-top: -50px;">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent  bg-primary  navbar-absolute">
        <div class="">
            <div class="navbar-wrapper">

                <h1>Bookings</h1>
            </div>


        </div>
    </nav>
    <!-- End Navbar -->
    <div class="panel-header panel-header-sm" style="background: linear-gradient( 161deg, #de615c, #de615c); ">

    </div>
    <div class="content">
        <div class="row">

            <div class="col-lg-12">
                <div class="col-lg-12">
                    <div class="card card-chart dashboard-panel">
                        <div class="card-header">

                            <h4 class="card-title"> </h4>
                        </div>
                        <div class="dropdown">
                            <button type="button" class="btn btn-round btn-outline-default dropdown-toggle btn-simple btn-icon no-caret" data-toggle="dropdown" aria-expanded="false" style="height:50px; width:50px">

                                <img src="~/assets2/images/settings.png" style="height:20px; width:20px" />
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">

                                <a href="@Url.Action("ViewCargobooking", "Admin")" class="dropdown-item">Refresh</a>


                            </div>
                        </div>
                        <div class="card-body">


                            <div class="table-responsive">

                                <table class="table">
                                    <thead class="text-primary">
                                        <tr>
                                            <th>
                                                Date created

                                            </th>

                                            <th>
                                                Email
                                            </th>

                                            <th>
                                                Cargo Weight
                                            </th>

                                            <th>
                                                Schedule
                                            </th>

                                            <th>
                                                Location
                                            </th>


                                            <th>Status</th>
                                            <th>
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody>


                                        @foreach (var tt in ViewBag.cargotable)
                                        {
                                            <tr>
                                                <td>
                                                    @tt.datecreated
                                                </td>

                                                <td>
                                                    @tt.email
                                                </td>

                                                <td>
                                                    @tt.itemweight <span>kg</span>
                                                </td>

                                                <td>
                                                    @tt.departure to @tt.arrival
                                                </td>

                                                <td>
                                                    @tt.terminalfrom to @tt.terminalto
                                                </td>

                                                <td>
                                                    @tt.status
                                                </td>
                                            </tr>
                                        }

                                    </tbody>



                                </table>

                            </div>

                        </div>

                    </div>
                </div>






            </div>


        </div>

    </div>

</div>
