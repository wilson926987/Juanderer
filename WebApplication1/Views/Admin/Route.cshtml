@if (ViewBag.modalstate != null)
{


    if (ViewBag.modalstate == "updating_route")
    {
        <div class="modal fade" id="sample">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">

                        <h3 class="modal-title" style="align-self:flex-start">Update routes</h3>

                    </div>

                    @using (Html.BeginForm("updaterouteprices", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="modal-body" style="z-index:1;">
                            @Html.HiddenFor(Model => Model.routeId, new { @Value = ViewBag.routeindex })
                            <table>
                                <tr>
                                    <th><p>Regular rate</p></th>
                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                    <td>
                                        @Html.EditorFor(model => model.price1, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.priceregular } })
                                        @Html.ValidationMessageFor(model => model.price1, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <th><p>Tourist rate</p></th>
                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                    <td>
                                        @Html.EditorFor(model => model.price2, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.pricetourist } })
                                        @Html.ValidationMessageFor(model => model.price2, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <th><p>Business rate</p></th>
                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                    <td>
                                        @Html.EditorFor(model => model.price3, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.pricebusiness } })
                                        @Html.ValidationMessageFor(model => model.price3, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <th><p>Business class 2 rate</p></th>
                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                    <td>
                                        @Html.EditorFor(model => model.price4, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.pricebusiness2 } })
                                        @Html.ValidationMessageFor(model => model.price4, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <th><p>Cargo rate<p></th>
                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                    <td>
                                        @Html.EditorFor(model => model.pricecargo, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.pricecargo } })
                                        @Html.ValidationMessageFor(model => model.pricecargo, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="Done" class="btn btn-success" style="z-index:1;" />
                        </div>
                    }



                    <img src="~/assets2/images/vertical logo-nobg-black ver.png" class="bg-modal" />
                </div>

            </div>
        </div>


    }
    else
    {
        <div class="modal fade" id="sample"
             style="margin-top: 400px;">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">

                        <h3 class="modal-title">
                            @ViewBag.modalstate
                        </h3>

                    </div>

                </div>
            </div>
        </div>



    }


}











@section Scripts {


    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            $("#sample").modal('show');

        });
    </script>


    @Scripts.Render("~/bundles/jqueryval")




}
