@model WebApplication1.Models.ySchedule

@{
    ViewBag.Title = "addschedule";
    Layout = "~/Views/Admin/_Adminlayout.cshtml";
}



<style>
    .template1 {
    }

    .card1 {
        margin-right: 10px;
        margin-left: 10px;
        min-width: 100px;
        min-height: 100px;
    }


    .panel1 {
    }
</style>







<div class="main-panel" id="main-panel" style="margin-top: -50px;">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent  bg-primary  navbar-absolute">
        <div class="">
            <div class="navbar-wrapper">

                <h3>Dashboard</h3>
            </div>


        </div>
    </nav>
    <!-- End Navbar -->
    <div class="panel-header panel-header-sm">

    </div>
    <div class="content">
        <div class="row">



            @using (Html.BeginForm("addschedule2", "Admin", FormMethod.Post))
            {
                <link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />


                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>ySchedule</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                    <div class="form-group">
                        @Html.LabelFor(model => model.route_id, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.route_id, new SelectList(ViewBag.routaland, "value", "text", "--select route--"), "--select route--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.route_id, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(model => model.transport_name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.transport_name, new SelectList(ViewBag.transportland, "value", "text", "--select route--"), "--select transport--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.transport_name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.departuretime, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.departuretime, new { htmlAttributes = new { @class = "form-control datepicker", @autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.departuretime, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.arrivaltime, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.arrivaltime, new { htmlAttributes = new { @class = "form-control datepicker" ,@autocomplete ="off" } })
                            @Html.ValidationMessageFor(model => model.arrivaltime, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }






        </div>

    </div>

</div>








@section Scripts {

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.datetimepicker.js"></script>
    <script>
        $(function () {
            $(".datepicker").datetimepicker({

                format: "h:ia d/M/y  D",
                weeks: true
            });

        });


    </script>


    @Scripts.Render("~/bundles/jqueryval")
}




